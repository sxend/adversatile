{
  "name": "adversatile",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --forceExit",
    "build:test": "npm run build && npm test",
    "codeformat": "tsfmt -r",
    "gen:pb:clean": "rm -rf generated-src && mkdir -p generated-src/protobuf",
    "gen:pb:js": "pbjs -t static-module --no-create --no-encode --no-decode --no-verify --no-convert --no-delimited -o generated-src/protobuf/messages.js src/protobuf/*.proto generated-src/protobuf/*.proto",
    "gen:pb:ts": "pbts -o generated-src/protobuf/messages.d.ts generated-src/protobuf/messages.js",
    "gen:pb": "npm run gen:pb:clean && npm run gen:pb:js && npm run gen:pb:ts",
    "prebuild": "npm run gen:pb && npm run codeformat",
    "build": "tsc --project ./tsconfig.json && webpack --mode=production",
    "build:watch": "npm run build -- --watch",
    "serve": "serve -l -C -p 3000"
  },
  "author": "sxend",
  "license": "MIT",
  "devDependencies": {
    "@types/get-port": "^3.2.0",
    "@types/handlebars": "^4.0.37",
    "@types/jest": "^22.2.3",
    "@types/puppeteer": "^1.3.2",
    "browser-env": "^3.2.5",
    "get-port": "^3.2.0",
    "hoxy": "^3.2.2",
    "jest": "^22.4.4",
    "preprocess-loader": "^0.2.2",
    "protobufjs": "^6.8.6",
    "puppeteer": "^1.4.0",
    "serve": "^6.5.8",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.3.0",
    "typescript": "^2.9.1",
    "typescript-formatter": "^7.2.2",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.5"
  },
  "engines": {
    "node": "10.3.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/?(*.)+(spec|test).ts?(x)"
    ],
    "globalSetup": "./test/helpers/BrowserEnv.js",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "deepmerge": "^2.1.1",
    "es6-promise": "^4.2.4"
  }
}
