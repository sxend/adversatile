{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "typeRoots": ["./node_modules/@types/"]
  },
  "include": ["src/*", "src/**/*", "test/*", "test/**/*"],
  "exclude": ["node_modules"]
}
